{
  "name": "rwe-launcher",
  "version": "0.1.0",
  "description": "Launcher application for Robot War Engine",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "run-p server master-server start",
    "build:main": "webpack --config webpack.main.config.js",
    "build:master": "webpack --config webpack.master.config.js",
    "build:renderer:dev": "RWE_LAUNCHER_IS_DEV=1 webpack --config webpack.renderer.config.js",
    "build:renderer:prod": "webpack --config webpack.renderer.config.js",
    "build:all:prod": "npm run build:master && npm run build:main && npm run build:renderer:prod",
    "build:all:dev": "npm run build:master && npm run build:main && npm run build:renderer:dev",
    "start": "npm run build:main && cross-env RWE_LAUNCHER_IS_DEV=1 electron ./dist/main.js",
    "server": "cross-env RWE_LAUNCHER_IS_DEV=1 webpack-dev-server --config webpack.renderer.config.js",
    "master-server": "npm run build:master && node dist/master-server.js",
    "clean": "rm -rf ./dist",
    "rebuild": "electron-rebuild --arch=x64 --only registry-js",
    "package": "npm run rebuild && npm run build:all:prod && electron-packager dist --arch=x64 --overwrite --asar",
    "lint": "eslint . --ext=.ts --ext=.tsx",
    "tsc": "tsc --noEmit",
    "storybook": "start-storybook",
    "test": "jest"
  },
  "author": "Michael Heasell",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@storybook/react": "^5.3.18",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.31",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/react-window": "^1.8.1",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/yargs": "^13.0.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "awesome-node-loader": "^1.1.1",
    "babel-jest": "^25.2.4",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^6.0.3",
    "css-loader": "^3.4.2",
    "electron": "^7.2.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^14.2.1",
    "electron-rebuild": "^1.10.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^5.1.0",
    "jest": "^25.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "style-loader": "^1.1.3",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.13.0",
    "@material-ui/core": "^4.9.8",
    "@material-ui/icons": "^4.9.1",
    "@sentry/electron": "^1.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.20",
    "react-redux": "^7.2.0",
    "react-window": "^1.8.5",
    "redux": "^4.0.5",
    "redux-observable": "^1.2.0",
    "registry-js": "^1.9.0",
    "reselect": "^4.0.0",
    "rxjs": "^6.5.4",
    "socket.io": "^2.5.0",
    "socket.io-client": "^2.3.0",
    "yargs": "^15.3.1"
  }
}
